<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LinearLayoutActivity2"
        android:orientation="vertical">
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorPrimary" android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                            android:text="Android"
                            android:layout_width="wrap_content"
                            android:textSize="@android:dimen/app_icon_size"
                            android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorAccent">
        <TextView
                android:text="PHP"

                android:layout_width="wrap_content"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_height="121dp" android:id="@+id/textView8" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">
        <TextView
                android:text="NodeJS"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent"
    >
        <TextView
                android:text="Python"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>