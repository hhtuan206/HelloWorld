<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RadioActivity" tools:ignore="ExtraText">

    <Button
            android:text="Kiểm tra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCheck"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="288dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
            android:text="Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbNam"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cbNu" app:layout_constraintBottom_toTopOf="@+id/btnCheck"
            app:layout_constraintHorizontal_bias="0.568" app:layout_constraintVertical_bias="0.501"/>
    <CheckBox
            android:text="Nữ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbNu"
            app:layout_constraintEnd_toStartOf="@+id/cbKhac" android:layout_marginEnd="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnCheck"
            app:layout_constraintVertical_bias="0.501"/>
    <CheckBox
            android:text="Khác"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbKhac"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCheck" android:layout_marginEnd="72dp"
            app:layout_constraintVertical_bias="0.501"/>
</androidx.constraintlayout.widget.ConstraintLayout>