<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".GPTBNActivity">
    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="100dp">
        <TableRow>
            <TextView
                    android:id="@+id/TextView"
                    android:text="A = "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/editA"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:id="@+id/TextView1"
                    android:text="B = "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/editB"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="horizontal" android:gravity="center" android:layout_margin="10dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="Giải"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnGiai"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="Xoá"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnXoa"
                    tools:layout_editor_absoluteX="440dp" tools:layout_editor_absoluteY="60dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="bottom|center">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtView"
                android:layout_margin="50dp"
                android:padding="10dp"
        />
    </LinearLayout>
</RelativeLayout>